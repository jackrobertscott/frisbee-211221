{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "target": "ES2017",
    "baseUrl": ".",
    "outDir": "dist",
  },
  "include": ["src/**/*.ts", "../shared/src/**/*.ts"],
  "exclude": ["src/**/*.test.*", "src/**/*.spec.*"]
}
